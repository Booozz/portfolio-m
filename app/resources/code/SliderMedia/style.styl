@import '../DocumentDefault/BaseStyles/Mixins/_rwdScale'
@import '../DocumentDefault/BaseStyles/Mixins/_stylesContent'

// GRID
$pageMaxWidth = lookup('$globalPageMaxWidth') || 2560px
$containerMaxWidth = lookup('$globalContainerMaxWidth') || 1376px
$containerPadding = lookup('$globalContainerPadding') || 32px
$containerPaddingMobile = lookup('$globalContainerPaddingMobile') || 16px
// BREAKPOINTS
$rupture.scale = lookup('$globalRuptureScale') || (0 426px 576px 768px 992px 1280px)
$rupture.anti-overlap = lookup('$globalRuptureAntiOverlap') || -1px
// FONT
$fontHeadingLineHeight = lookup('$globalFontHeadingLineHeight') || 1.3
// COLOR
$colorWhite = lookup('$globalColorPrimaryWhite') || #FFF
$colorBlack = lookup('$globalColorPrimaryBlack') || #222
$colorRed = lookup('$globalColorPrimaryRed') || #FA5046
$colorGold = lookup('$globalColorPrimaryGold') || #D2BE96
$colorGoldDark = lookup('$globalColorPrimaryGoldDark') || #B49B6E
$colorGoldLight = lookup('$globalColorPrimaryGoldLight') || #F6EBD5

// ##SLIDER-MEDIA
// =============================================================

[is='flynt-slider-media']
  &.flyntComponent
    .wrapper
      center($pageMaxWidth)

    .sliderMediaSlider
      overflow: hidden
      position: relative

      .container
        center($pad: $containerPadding)

        +below('m')
          center($pad: $containerPaddingMobile)

      &-title
        rwdScale('font-size', 18px, 24px, 426px, 768px)
        stylesTitle()
        margin: 0 0 2rem

        +below('m')
          margin-bottom: 1.5rem

        +below('s')
          margin-bottom: 1.25rem

    .sliderMedia
      background: $colorBlack
      opacity: 1
      position: relative

      &-isHidden
        opacity: 0

      &-slides
        list-style: none
        margin: 0
        padding: 0

      &-slide
        outline: 0
        position: relative

      @import '_slickSliderStyling'
      @import 'Partials/Image/_style'
      @import 'Partials/OembedVideo/_style'
      @import 'Partials/SlideTitle/_style'

    @import 'Partials/SlideProgress/_style'

    .sliderMediaSlider-pageHeader button.sliderMedia-prevButton
      +below('m')
        transform: translate(-100%, -50%)

    .sliderMediaSlider-pageHeader button.sliderMedia-nextButton
      +below('m')
        transform: translate(100%, -50%)

    .sliderMediaSlider-pageHeader
      .sliderMedia
        &-slides
          height: 0
          padding-bottom: calc(1 / 2 * 100%)

          +below('m')
            height: auto
            padding-bottom: 0

          &.slick-initialized
            height: auto
            padding-bottom: 0

        &,
        &-imageItem,
        .posterImage
          max-height: 84vh
          min-height: 520px

          +below('xl')
            min-height: 480px

          +below('l')
            max-height: none
            min-height: auto

    .sliderMediaSlider-content:not(.sliderMediaSlider-pageHeader)
      .sliderMedia
        &-slides
          height: 0
          padding-bottom: calc(9 / 16 * 100%)

          &.slick-initialized
            height: auto
            padding-bottom: 0

        &,
        &-imageItem,
        .posterImage
          max-height: 900px

// THEME-DFA
// -------------------------------------------------------------

[is='flynt-slider-media']
  &.flyntComponent
    &--themeDfa
      .sliderMediaSlider-title
        font-weight: 500
        -moz-osx-font-smoothing: auto
        -webkit-font-smoothing: subpixel-antialiased

        &::before
          background-color: $colorRed

// THEME-DFP
// -------------------------------------------------------------

[is='flynt-slider-media']
  &.flyntComponent
    &--themeDfp
      .sliderMediaSlider-title
        font-weight: 400

        .home &
          color: $colorWhite

        .page-template-tmpl-project &
          font-weight: 500

        &::before
          background-image: linear-gradient(to left, $colorGoldDark, $colorGoldLight)

// SPACING-GLOBAL
// -------------------------------------------------------------

[is='flynt-slider-media']
  &.flyntComponent:not(:last-child)
    .wrapper
      margin: 0 0 3rem

      +below('m')
        margin-bottom: 2.5rem

      +below('s')
        margin-bottom: 2rem

.home
  .flyntComponent[is='flynt-slider-media'].flyntComponent--themeDfa.flyntComponent--pageHeader
    .wrapper
      margin-bottom: 3rem

      +below('m')
        margin-bottom: 2.5rem

      +below('s')
        margin-bottom: 2rem

  .flyntComponent[is='flynt-slider-media'].flyntComponent--themeDfp.flyntComponent--pageHeader
    .wrapper
      margin-bottom: 0
