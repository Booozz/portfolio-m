{
  "name": "portfolio-m",
  "description": "Portfolio Website",
  "version": "2.0.0",
  "main": "gulpfile.js",
  "scripts": {
    "start": ".\\run\\start.ps1 $env:npm_package_name development",
    "start.debug": ".\\run\\start.ps1 $env:npm_package_name development debug",
    "build": ".\\run\\build.ps1 $env:npm_package_name production",
    "build.debug": ".\\run\\build.ps1 $env:npm_package_name production debug",
    "build.preview": ".\\run\\build.ps1 $env:npm_package_name staging",
    "build.preview.debug": ".\\run\\build.ps1 $env:npm_package_name staging debug",
    "deploy": ".\\run\\deploy.ps1 $env:npm_package_name production",
    "deploy.preview": ".\\run\\deploy.ps1 $env:npm_package_name staging"
  },
  "browserslist": {
    "production": [
      "> 1%",
      "last 2 versions",
      "Firefox ESR"
    ],
    "legacyBrowsers": [
      "> 1%",
      "last 2 versions",
      "Firefox ESR"
    ],
    "modernBrowsers": [
      "last 2 Chrome versions",
      "not Chrome < 60",
      "last 2 Safari versions",
      "not Safari < 10.1",
      "last 2 iOS versions",
      "not iOS < 10.3",
      "last 2 Firefox versions",
      "not Firefox < 54",
      "last 2 Edge versions",
      "not Edge < 15"
    ]
  },
  "devDependencies": {
    "@babel/core": "7.14.6",
    "@babel/preset-env": "7.14.5",
    "browser-sync": "2.26.14",
    "del": "6.0.0",
    "eslint": "7.28.0",
    "eslint-config-standard": "16.0.3",
    "eslint-plugin-import": "2.23.4",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-promise": "5.1.0",
    "eslint-plugin-standard": "5.0.0",
    "esm": "3.2.25",
    "favicons": "6.2.2",
    "gulp": "4.0.2",
    "gulp-autoprefixer": "8.0.0",
    "gulp-babel": "^8.0.0",
    "gulp-cache": "1.1.3",
    "gulp-concat": "2.6.1",
    "gulp-debug": "4.0.0",
    "gulp-if": "3.0.0",
    "gulp-imagemin": "7.1.0",
    "gulp-sass": "4.1.0",
    "gulp-uglify-es": "2.0.0",
    "sass": "1.35.1",
    "stylelint": "13.13.1",
    "stylelint-order": "4.1.0",
    "stylelint-scss": "3.19.0"
  },
  "dependencies": {
    "document-register-element": "1.14.10",
    "jquery": "3.6.0"
  },
  "stylelint": {
    "extends": [
      "./.stylelintrc"
    ],
    "ignoreFiles": [
      "dist/**"
    ]
  },
  "eslintConfig": {
    "env": {
      "browser": true
    },
    "extends": [
      "eslint-config-standard"
    ],
    "rules": {
      "camelcase": "off",
      "no-unneeded-ternary": "off",
      "no-unused-vars": "off",
      "no-undef": "off",
      "spaced-comment": "off"
    }
  },
  "eslintIgnore": [
    "dist/**"
  ],
  "author": "Marian Schramm",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/mrnmrhcs/portfolio-m/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mrnmrhcs/portfolio-m.git"
  }
}
