<div class="slideTitle slideTitle--overlayTitleBottom {{ useCase == 'pageHeader' ? 'slideTitle--pageHeader' }} {{ layoutType == '1' ? 'slideTitle--sliderIsContentWidth' }}">
  {% if useCase == 'pageHeader' or layoutType == '0' %}
    <div class="container">
  {% endif %}
    <div class="slideTitle-content">
      {% if topic %}
        <span class="slideTitle-topic">{{ topic|e }}</span>
      {% endif %}
      <h2 class="slideTitle-title h1">
        {% if link %}
          <a class="slideTitle-titleLink" href="{{ link.url|e('esc_url') }}" {{ link.target == '_blank' ? 'target="_blank" rel="noreferrer noopener"' }}>
        {% endif %}
          {{ title|e }}
        {% if link %}
          </a>
        {% endif %}
      </h2>
      {% if heroType == 'subtitle' %}
        {% if subtitle %}
          <p class="slideTitle-description paragraph-default">{{ subtitle|e }}</p>
        {% endif %}
      {% else %}
        {% if link %}
          <a class="slideTitle-cta btn btn--transparent btn--icon btn--iconArrowWhite btn--iconRight" href="{{ link.url|e('esc_url') }}" {{ link.target == '_blank' ? 'target="_blank" rel="noreferrer noopener"' }}>{{ link.title|e }}</a>
        {% endif %}
      {% endif %}
    </div>
  {% if useCase == 'pageHeader' or layoutType == '0' %}
    </div>
  {% endif %}
</div>
